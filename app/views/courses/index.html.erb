<h1>Listing courses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Number</th>
    <th>Duration</th>
    <th>Price</th>
    <th>Outline</th>
    <th>Discount level</th>
    <th>Provider</th>
    <th>Technology</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.title %></td>
    <td><%=h course.number %></td>
    <td><%=h course.duration %></td>
    <td><%=h course.price %></td>
    <td><%=h course.outline %></td>
    <td><%=h course.discount.discount_level %></td>
    <td><%=h course.provider %></td>
    <td><%=h (course.technology.tech + course.technology.version) %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

